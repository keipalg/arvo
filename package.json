{
    "name": "pj2",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev --workspace packages/shared\" \"npm run dev --workspace apps/backend\" \"npm run dev --workspace apps/frontend\"",
        "dev:backend": "concurrently \"npm run dev --workspace packages/shared\" \"npm run dev --workspace apps/backend\"",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build:shared": "npm --workspace packages/shared run build",
        "build:backend": "npm --workspace apps/backend run build",
        "build:frontend": "npm --workspace apps/frontend run build",
        "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
        "prepare": "husky",
        "lint-staged": "lint-staged"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{html,css,json}": [
            "prettier --write --ignore-unknown"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "devDependencies": {
        "@eslint/js": "^9.35.0",
        "@tanstack/eslint-plugin-router": "^1.131.2",
        "concurrently": "^9.2.1",
        "eslint": "^9.35.0",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jiti": "^2.5.1",
        "lint-staged": "^16.1.6",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.43.0"
    }
}
