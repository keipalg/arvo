{
    "name": "@arvo/backend",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "typecheck": "tsc --noEmit",
        "build": "tsc",
        "start": "node dist/index.js",
        "db:seed": "node --import tsx --env-file .env ./scripts/seed.ts",
        "db:setup-materials": "node --import tsx --env-file .env ./scripts/setupMaterials.ts",
        "db:setup-notifications": "node --import tsx --env-file .env ./scripts/setupNotifications.ts",
        "shift-dates": "node --import tsx --env-file .env ./scripts/data-management/shift-user-dates.ts",
        "export-data": "node --import tsx --env-file .env ./scripts/data-management/export-user-data.ts",
        "import-data": "node --import tsx --env-file .env ./scripts/data-management/import-user-data.ts"
    },
    "dependencies": {
        "@arvo/shared": "file:*",
        "@google-cloud/storage": "^7.17.3",
        "@hono/node-server": "^1.19.0",
        "@hono/trpc-server": "^0.4.0",
        "@neondatabase/serverless": "^1.0.2",
        "better-auth": "^1.3.26",
        "bufferutil": "^4.0.9",
        "date-fns-tz": "^3.2.0",
        "dotenv": "^17.2.2",
        "drizzle-orm": "^0.44.5",
        "hono": "^4.9.6",
        "openai": "^6.7.0",
        "superjson": "^2.2.2",
        "uuid": "^13.0.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@types/node": "^20.11.17",
        "@types/ws": "^8.18.1",
        "drizzle-kit": "^0.31.4",
        "tsx": "^4.20.5",
        "typescript": "^5.8.3"
    },
    "exports": {
        "./trpc": {
            "import": "./dist/trpc/index.js",
            "types": "./dist/trpc/index.d.ts"
        }
    }
}
