{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationMap": true,
        "noEmitOnError": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "types": ["node"],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "shared/*": ["../../packages/shared/src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
